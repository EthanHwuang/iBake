<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sin_bg_color"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/mydev_user_txid"
        android:layout_width="100dp"
        android:layout_height="@dimen/mydev_list_height"
        android:layout_marginLeft="@dimen/mydev_icon_margin"
        android:gravity="center_vertical"
        android:text="Fiona"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/common_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mydev_user_phone_txid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/mydev_icon_margin"
        android:layout_weight="1"
        android:text="OVEN-C433"
        android:textColor="@color/sin_6"
        android:textSize="@dimen/common_text_size"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/mydev_user_rm_imgid"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_marginRight="@dimen/mydev_icon_margin"
        android:src="@drawable/icon_close" />
</LinearLayout>