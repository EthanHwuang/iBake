<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/title_bar_height"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_layout_height"
        android:background="@drawable/layer_list"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/input_layout_height"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/reset_psw_title"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_layout_height"
        android:layout_marginTop="@dimen/easylink_margin_top"
        android:layout_marginLeft="@dimen/easylink_margin_top"
        android:layout_marginRight="@dimen/easylink_margin_top"
        android:background="@drawable/corners_bg"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/rsp_username_etid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/input_edittext_bg"
            android:focusable="true"
            android:hint="@string/reset_psw_input"
            android:paddingLeft="@dimen/input_txt_padding"
            android:textColor="@color/sin_6"
            android:textColorHint="@color/txt_color_hint"
            android:textSize="@dimen/common_text_size"
            android:textCursorDrawable="@null" />

    </LinearLayout>
</LinearLayout>