<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/title_bar_height"
    android:background="@color/sin_bg_color"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="@dimen/easylink_img_size"
        android:layout_height="@dimen/easylink_img_size"
        android:layout_marginTop="@dimen/easylink_margin_top"
        android:src="@drawable/add_device_3s" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/easylink_margin_top"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.5"
            android:paddingLeft="@dimen/icon_margin_left"
            android:paddingRight="@dimen/icon_margin_left"
            android:text="@string/add_dev_next_txt"
            android:textColor="@color/sin_text_color"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/easylink_next_btnid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_btn_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:text="@string/add_dev_next_btn"
            android:textColor="@color/common_btn_txtcolor"
            android:textSize="@dimen/common_button_txtsize"/>

    </RelativeLayout>
</LinearLayout>
