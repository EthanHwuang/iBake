<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/app_bar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input_btn_height"
        android:layout_marginTop="@dimen/title_bar_height"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydev_list_height"
            android:background="@color/sin_bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dev_qrcode_imgid"
                android:layout_width="@dimen/mydev_img_size"
                android:layout_height="@dimen/mydev_img_size"
                android:layout_marginLeft="@dimen/mydev_icon_margin"
                android:src="@drawable/mydevice_icon_device_online" />

            <TextView
                android:id="@+id/dev_qrcode_nametvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydev_icon_margin"
                android:layout_weight="1"
                android:text="@string/init_devname"
                android:textColor="@color/sin_6"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_item_margin"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="@dimen/common_item_margin">


            <ImageView
                android:id="@+id/qrcodeimg"
                android:layout_width="@dimen/qrcode_size"
                android:layout_height="@dimen/qrcode_size"
                android:layout_marginRight="@dimen/mydev_icon_margin" />

            <!--android:src="@drawable/micoio"-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydev_list_height"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/device_item_tvid12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qrcode_des"
                android:textColor="@color/sin_6"
                android:textSize="@dimen/common_text_size"/>

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>