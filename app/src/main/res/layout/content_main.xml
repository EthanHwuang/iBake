<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sin_bg_color"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/img_btn_parent"
        android:layout_marginTop="@dimen/common_item_margin"
        android:layout_marginBottom="@dimen/common_item_margin"
        android:gravity="center"
        android:orientation="horizontal">

        <!--android:background="@color/sin_line_color"-->

        <LinearLayout
            android:layout_width="@dimen/img_btn_size"
            android:layout_height="@dimen/img_btn_size_parent"
            android:layout_marginRight="@dimen/img_to_center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adddevice_imgid"
                android:layout_width="@dimen/img_btn_size"
                android:layout_height="@dimen/img_btn_size"
                android:src="@drawable/add_device" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:gravity="center"
                android:text="@string/add_dev"
                android:textColor="@color/sin_text_color"
                android:textSize="@dimen/common_text_min"
                android:textStyle="bold" />
        </LinearLayout>


        <View
            android:layout_width="1dip"
            android:layout_height="@dimen/img_btn_size"
            android:background="@color/sin_line_color" />

        <LinearLayout
            android:layout_width="@dimen/img_btn_size"
            android:layout_height="@dimen/img_btn_size_parent"
            android:layout_marginLeft="@dimen/img_to_center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/virtualdev_imgid"
                android:layout_width="@dimen/img_btn_size"
                android:layout_height="@dimen/img_btn_size"
                android:src="@drawable/virtal_device" />

            <TextView
                android:id="@+id/toolbar_title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:gravity="center"
                android:text="@string/virtul_dev"
                android:textColor="@color/sin_text_color"
                android:textSize="@dimen/common_text_min"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
