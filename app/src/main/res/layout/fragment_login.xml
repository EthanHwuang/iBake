<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_layout_height"
        android:background="@drawable/layer_list" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/icon_margin_left"
            android:layout_marginRight="@dimen/icon_margin_right"
            android:src="@drawable/login_phone_number" />

        <EditText
            android:id="@+id/username_etid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/phonenumber"
            android:textColorHint="@color/txt_color_hint"
            android:textColor="@color/sin_6"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_text_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_layout_height"
        android:background="@drawable/layer_list" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/icon_margin_left"
            android:layout_marginRight="@dimen/icon_margin_right"
            android:src="@drawable/login_password" />

        <EditText
            android:id="@+id/password_etid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:hint="@string/password"
            android:textColorHint="@color/txt_color_hint"
            android:inputType="textPassword"
            android:textColor="@color/sin_6"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_text_size" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_forget_layoutid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_layout_height"
        android:background="@drawable/layer_list" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/icon_size_min"
            android:layout_height="@dimen/icon_size_min"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/icon_margin_min_left"
            android:layout_marginRight="@dimen/icon_margin_min_right"
            android:src="@drawable/login_problem" />

        <TextView
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/forgetpsw"
            android:textColor="@color/txt_color_hint"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/common_text_min2" >
        </TextView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_btn_height"
            android:layout_alignParentBottom="true"
            android:text="@string/login"
            android:textColor="@color/common_btn_txtcolor"
            android:textSize="@dimen/common_button_txtsize"
            android:background="@color/colorAccent"/>
    </RelativeLayout>

</LinearLayout>