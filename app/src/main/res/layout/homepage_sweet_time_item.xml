<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/line_item_bottom"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/delicacy_1_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_img_height"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/empty_recipe" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/common_margin_top">

        <TextView
            android:id="@+id/delicacy_1_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="11"
            android:singleLine="true"
            android:text="American kraft cheese goes well with the apple pie"
            android:textColor="@color/good_text_color"
            android:textSize="@dimen/common_text_min2" />

        <TextView
            android:id="@+id/delicacy_1_like_no"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/comment_margin_right"
            android:gravity="center"
            android:text="97"
            android:textColor="@color/good_no_text_color"
            android:textSize="@dimen/common_text_min2"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/delicacy_1_like_img"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_alignParentRight="true"
            android:background="@drawable/icon_favourate_2" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_margin_top"
        android:background="#eeeeee" />

</LinearLayout>