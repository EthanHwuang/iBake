            <TextView
                android:id="@+id/cloud_cb_caketxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/cloud_cb_cake"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_text_min" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cloud_cb_biscuitly"
            android:layout_width="0dp"
            android:layout_height="@dimen/cloud_cb_lay_height"
            android:layout_weight="1"
            android:background="@drawable/full_box"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cloud_cb_biscuitimg"
