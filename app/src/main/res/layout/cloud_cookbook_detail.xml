<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/cloud_cb_detail_top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/cloud_cb_other_height"
            android:layout_weight="1"
            android:background="@drawable/full_box"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/cloud_search_txt_height"
                android:layout_height="@dimen/cloud_search_txt_height"
                android:src="@drawable/recipe_btn_offical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_text_min"
                android:text="@string/cloud_cb_offical"
                android:textColor="@color/sin_text_color"
                android:textSize="@dimen/common_text_min" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/cloud_cb_other_height"
            android:layout_weight="1"
            android:background="@drawable/full_box"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/cloud_search_txt_height"
                android:layout_height="@dimen/cloud_search_txt_height"
                android:src="@drawable/recipe_btn_other" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/common_text_min"
                android:text="@string/cloud_cb_other"
                android:textColor="@color/sin_text_color"
                android:textSize="@dimen/common_text_min" />
        </LinearLayout>
    </LinearLayout>
    <!--line 1-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cloud_cb_breadly"
            android:layout_width="0dp"
            android:layout_height="@dimen/cloud_cb_lay_height"
            android:layout_weight="1"
            android:background="@drawable/full_box"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cloud_cb_breadimg"
                android:layout_width="@dimen/cloud_cb_img_size"
                android:layout_height="@dimen/cloud_cb_img_size"
                android:src="@drawable/recipe_btn_bread_n" />

            <TextView
                android:id="@+id/cloud_cb_breadtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/common_margin_top"
                android:text="@string/cloud_cb_bread"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/common_text_min" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cloud_cb_cakely"
            android:layout_width="0dp"
            android:layout_height="@dimen/cloud_cb_lay_height"
