<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <include layout="@layout/app_bar_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/input_btn_height"
        android:layout_marginTop="@dimen/title_bar_height"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydev_list_height"
            android:background="@color/sin_bg_color"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/device_detail_imgid"
                android:layout_width="@dimen/mydev_img_size"
                android:layout_height="@dimen/mydev_img_size"
                android:layout_marginLeft="@dimen/mydev_icon_margin"
                android:src="@drawable/mydevice_icon_device_online" />


            <TextView
                android:id="@+id/dev_detail_nametvid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydev_icon_margin"
                android:layout_weight="1"
                android:text="@string/init_devname"
                android:textColor="@color/sin_6"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/devname_editimgid"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginRight="@dimen/mydev_icon_margin"
                android:src="@drawable/mydevice_icon_edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dev_detail_sharelyid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydev_list_height"
            android:layout_marginTop="5dp"
            android:background="@color/sin_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydev_icon_margin"
                android:layout_weight="1"
                android:text="@string/dev_share"
                android:textColor="@color/sin_6"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="@dimen/icon_size_min"
                android:layout_height="@dimen/icon_size_min"
                android:layout_marginRight="@dimen/mydev_icon_margin"
                android:src="@drawable/mydevice_icon_enter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/device_item_lyid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mydev_list_height"
            android:layout_marginTop="5dp"
            android:background="@color/sin_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/device_item_tvid12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/mydev_icon_margin"
                android:layout_weight="1"
                android:text="@string/auth_user"
                android:textColor="@color/sin_6"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

        </LinearLayout>

        <ListView
            android:id="@+id/edit_dev_user_lvid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:divider="#00000000"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/mydevedit2_ctrl_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_btn_height"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:text="@string/enter"
            android:textColor="@color/common_btn_txtcolor"
            android:textSize="@dimen/common_button_txtsize" />

    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>